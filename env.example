#!/bin/bash

## Copy this file to .env and edit as needed.

# General Vars.
PROJECT_ROOT=~/development/chirripo
PROJECT_DOCROOT=web
PROJECT_NAME=chirripo
PORT_PREFIX=100
VIRTUAL_HOST=chirripo.docker
OTHER_VIRTUAL_HOSTS=

# Nginx Container.
NGINX_TAG=alpine

# PHP Container.
PHP_TAG=7.4
PHP_POST_MAX_SIZE=100M
PHP_UPLOAD_MAX_FILESIZE=100M
XDEBUG_ENABLE=disable

# DB Container.
DB_TAG=10.5
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=drupal
MYSQL_USER=drupal
MYSQL_PASSWORD=drupal

# CLI Container.
CLI_TAG=7.4

# Varnish Container.
VARNISH_ENABLE=0
VARNISH_TAG=3.5

# Mailhog Container.
MAILHOG_ENABLE=0
MAILHOG_TAG=v1.0.0

# Solr Container.
SOLR_ENABLE=0
SOLR_TAG=6-alpine

# Memcached Container.
MEMCACHED_ENABLE=0
MEMCACHED_TAG=1.6-alpine

# Selenium Container.
SELENIUM_ENABLE=0
SELENIUM_TAG=3.6.0

# Blackfire Container.
BLACKFIRE_ENABLE=0
BLACKFIRE_TAG=1.34.0
BLACKFIRE_SERVER_ID=
BLACKFIRE_SERVER_TOKEN=
